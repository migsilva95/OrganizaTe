@model OrganizaTe.Models.CadeirasToDropDown

@{
    ViewBag.Title = "Add uma Cadeira";
}

<h2>Add uma Cadeira</h2>


@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CadeirasTemTurmas.TurmasFK)
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.CadeirasTemTurmas.CadeirasFK, "Cadeiras", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CadeirasTemTurmas.CadeirasFK", new SelectList(Model.Cadeiras, "ID", "Nome"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CadeirasTemTurmas.CadeirasFK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adicionar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar Atrás", "Index", new { id = Model.CadeirasTemTurmas.TurmasFK })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
